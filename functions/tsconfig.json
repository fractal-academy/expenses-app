{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "plugins": [
      // Transform paths in output .js files
      { "transform": "typescript-transform-paths" }
      ]
    },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}
